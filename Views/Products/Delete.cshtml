@model CarpetStore.Models.Product
<div style="margin-top: 100px; display: flex; flex-direction: column; align-items: center;">
    <h2 style="text-align: center; font-size: 2rem; font-weight: 600;">Delete Product</h2>

    <p style="text-align: center; font-size: 1.2rem; margin-bottom: 30px;">Are you sure you want to delete this product?</p>

    <div style="width: 80%; max-width: 600px; margin: 0 auto;">
        <div class="form-group" style="margin-bottom: 15px;">
            <label style="display: block; text-align: center; font-weight: 500;">Id</label>
            <input type="text" value="@Model.Id" class="form-control" style="text-align: center;" readonly />
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
            <label style="display: block; text-align: center; font-weight: 500;">Name</label>
            <input type="text" value="@Model.Name" class="form-control" style="text-align: center;" readonly />
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
            <label style="display: block; text-align: center; font-weight: 500;">Detail</label>
            <textarea class="form-control" style="text-align: center;" readonly>@Model.Detail</textarea>
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
            <label style="display: block; text-align: center; font-weight: 500;">Price</label>
            <input type="text" value="@Model.Price.ToString("C2")" class="form-control" style="text-align: center;" readonly />
        </div>

        <form asp-action="DeleteConfirmed" method="post" class="text-center mt-4 d-flex justify-content-center gap-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-outline-danger px-4 py-2" style="border-radius: 25px; transition: all 0.3s ease; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
                <i class="fas fa-trash-alt me-2"></i>Delete Product
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2" style="border-radius: 25px; transition: all 0.3s ease; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </form>
    </div>
</div>