@model List<CarpetStore.Models.Product>
<div style="margin-top: 100px">
    <h5 class="mbr-section-subtitle mbr-fonts-style align-center mb-0 mt-2 display-5">Products</h5>

    <table id="table" class="table table-striped custom-table datatable m-5">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Name</th>
                <th>Detail</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td><img src="@product.ImageUrl" width="20" height="600" alt="Image"></td>
                   
                    <td>@product.Name</td>
                    <td>@product.Detail</td>
                    <td>@product.Price</td>
                    <td>
                        <a asp-action="Detail" asp-route-id="@product.Id">Details</a> |
                        <a asp-action="Edit" asp-route-id="@product.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Create" class="btn btn-info">Create</a>
    <script>
        new DataTable('#table');
    </script>
</div>
