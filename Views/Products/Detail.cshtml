@model Product

<div class="container">
    <div class="card-wrapper">
        <div class="row align-items-center">
            <div class="col-12 col-lg-6">
                <div class="image-wrapper">
                    <img src="@Model.ImageUrl" alt="Website Builder">
                </div>
            </div>
            <div class="col-12 col-lg">
                <div class="text-box">
                    <h5 class="mbr-title">
                        <strong>@Model.Name</strong>
                    </h5>
                    <p class="mbr-text">@Model.Detail</p>
                    <div class="cost">
                        <span class="currentcost">@Model.Price.ToString("c")</span>
                    </div>
                    <div class="mbr-section-btn pt-3">
                        <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-pId="@Model.Id" class="btn btn-primary">
                            <span class="mbrib-cart-add mbr-iconfont mbr-iconfont-btn"></span>Add to cart
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
